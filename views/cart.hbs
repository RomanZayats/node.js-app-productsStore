<h1>Cart</h1>

<div id="cart">
  {{#if products.length}}
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Quantity</th>
          <th>Price per item</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        {{#each products}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>{{price}}</td>
            <td>
              <button
                class="btn btn-small js-remove"
                data-id="{{id}}"
              >Remove</button>
            </td>
          </tr>
        {{/each}}

      </tbody>
    </table>
    <p><strong>TOTAL PRICE: </strong><span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">
      <button type="submit" class="btn">Make order</button>
    </form>
  {{else}}
    <p>No items added.</p>
  {{/if}}
</div>