<h1>Edit {{product.title}}</h1>
<form action="/products/edit" method="POST" class="product-form">
    <div class="input-field">
        <input name="title" placeholder="Type the title" id="product_title" type="text" class="validate" required value="{{product.title}}">
        <label for="product_title"></label>
        <span class="helper-text" data-error="Type some text"></span>
    </div>
    <div class="input-field">
        <input name="price" placeholder="Type the price" id="product_price" type="number" class="validate" required min="1" value="{{product.price}}">
        <label for="product_price"></label>
        <span class="helper-text" data-error="Type some number"></span>
    </div>
    <div class="input-field">
        <input name="imgURL" placeholder="Type the image URL" id="product_img" type="text" class="validate" required value="{{product.imgURL}}">
        <label for="product_img"></label>
        <span class="helper-text" data-error="Type some URL"></span>
    </div>

    <input type="hidden" name="id" value="{{product.id}}">

    <button type="submit" class="btn btn-primary">Edit Product</button>
</form>

<form action="/products/remove" method="POST">
    <input type="hidden" name="id" value="{{product.id}}">
    <button class="btn red">Remove</button>
</form>
